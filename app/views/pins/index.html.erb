<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url( :thumb ) %>&nbsp;</td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class: "btn btn-xs btn-primary" %>&nbsp;</td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-xs btn-warning" %>&nbsp;</td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

